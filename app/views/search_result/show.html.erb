<div class="flex min-h-full flex-col justify-center px-6 py-8 lg:px-8">
  <div class="text-center">
    <p class="text-2xl md:text-4xl mb-3 font-bold"><%= @music.title %></p>
    <div class="text-center sm:flex justify-center items-center">
      <% if @music.description? %>
        <p><i class="fa-solid fa-circle-info mr-1"></i><%= @music.description %></p>
      <% end %>
      <p><i class="fa-solid fa-tag mr-1 sm:ml-4"></i><%= @music.categories[0].name %></p>
      <p><i class="fa-solid fa-user mr-1 sm:ml-4"></i><%= @music.composer.composer %></p>
    </div>
  </div>

  <div class="flex justify-center mt-2 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= link_to (t'search_results.show.search_button'), youtube_search_index_path(@music.title), class:"bg-blue-200 p-2 my-3 rounded-lg" %>
  </div>
  <%# コメント入力フォーム %>
  <%= render 'comments/form', comment: @comment %>
  <%# コメント一覧表示 %>
  <%= render 'comments/comment', comments: @comments %>
</div>