<%# <div class='h-3/4 bg-center bg-cover'> %>
  <div class="text-3xl flex flex justify-center">
    <p>検索結果<%= @composers.count %>件</p>
  </div>
  <div class="max-w-screen-2xl sm:py-4 md:px-6 mx-auto lg:py-6">
    <div class="md:grid grid-cols-2">
      <% @musics.each do |result| %>
        <div class="rounded-md border bg-blue-100 border-5 border-gray-600 hover:text-slate-500 p-3 m-0.5">
          <div class="flex flex justify-between">
            <div>
              <%= link_to result.title, youtube_search_index_path(result.title), class:"text-lg font-medium" %>
              <p class="text-sm">#<%= Category.find(result.music_categories[0].category_id).name %></p>
              <p class="text-sm">#<%= result.description %></p>              
            </div>
            <div class="flex items-center">
              <% if logged_in? %>
                <% if current_user.liked_by?(music: result.id) %>
                  <%= render 'shared/unlike_bottun', music: result %> 
                <% else %>
                  <%= render 'shared/like_bottun', music: result  %>
                <% end %>
              <% else %>
                <%= render 'shared/like_bottun', music: result  %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<%# </div> %>