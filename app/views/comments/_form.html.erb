  <div class="mx-auto w-4/5">
    <%= form_with model: comment, url: search_result_comments_path(@music.id) do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      <%= f.submit (t'defaults.comment'), class:"mt-2 text-white bg-sky-700 hover:bg-sky-800 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg px-4 py-2 dark:bg-sky-600 dark:hover:bg-sky-700 dark:focus:ring-blue-800" %>
  <% end %>
  </div>