<% comments.each do |comment| %>
  <ul role="list" class="divide-y divide-gray-100">
      <li class="flex justify-between border-t m-auto mx-4">
        <div class="flex">
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900"><%= comment.user.name %></p>
            <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= comment.body %></p>
          </div>
        </div>
        <div class="hidden sm:flex sm:flex-col sm:items-end">
          <p class="text-sm leading-6 text-gray-900"><%= comment.created_at %></p>
        </div>
      </li>
  </ul>
<% end %>
