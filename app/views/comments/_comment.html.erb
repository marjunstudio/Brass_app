<div class="mt-10 mx-auto w-5/6">
  <% comments.each do |comment| %>
    <ul role="list" class="py-2 divide-y divide-gray-100">
      <li class="flex justify-between border-t m-auto mx-4">
        <div class="flex">
          <div class="min-w-0 flex-auto">
            <p class="text-sm font-semibold leading-6 text-gray-900"><%= comment.user.name %></p>
            <p class="break-words mt-1 truncate text-xs leading-5 text-gray-500"><%= simple_format(comment.body) %></p>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>