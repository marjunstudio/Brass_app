<%# ユーザープロフィールページ %>
<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-16">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6"><%= t'.title' %></h2>
    </div>
    <div class="max-w-screen-md grid sm:grid-cols-2 gap-4 mx-auto">
      <div class="sm:col-span-2">
        <p class="inline-block text-gray-800 text-sm sm:text-base mb-2">ユーザー名</p>
        <p class="w-full text-gray-800 focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"><%= current_user.name %></p>
      </div>
      <div class="sm:col-span-2">
        <p class="inline-block text-gray-800 text-sm sm:text-base mb-2">メールアドレス</p>
        <p class="w-full text-gray-800 focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2"><%= current_user.email %></p>
        </div>
        <div class="sm:col-span-2 flex justify-between items-center">
          <%= link_to '編集', edit_profile_path, class:"bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
        </div>
      </div>
    </div>
  </div>
</div>