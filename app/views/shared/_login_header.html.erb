<div class="w-full px-4 md:px-8 mx-auto">
  <header class="flex justify-between items-center py-4 md:py-6">
    <div class="flex">
      <%= link_to('Animatone', root_path, class: "inline-flex items-center text-black-800 text-2xl md:text-3xl font-bold gap-2.5") %>
    </div>
    <div class="hidden md:inline-block flex">
      <%= link_to (t'defaults.like'), likes_path, class: 'inline-block focus-visible:ring ring-indigo-300 text-gray-500 hover:text-indigo-500 active:text-indigo-600 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-4 py-3' %>
      <%= link_to (t'defaults.user_index'), profile_path, class: 'inline-block focus-visible:ring ring-indigo-300 text-gray-500 hover:text-indigo-500 active:text-indigo-600 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-4 py-3' %>
      <%= link_to (t'defaults.logout'), logout_path, method: :delete, class: 'inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3' %>
    </div>
    <%# ハンバーガーメニュー %>
    <div x-data="{ isOpen: true }" class="md:hidden relative inline-block ">
    <!-- Dropdown toggle button -->
    <button @click="isOpen = !isOpen" class="relative z-10 block p-2 text-gray-700 bg-white border border-transparent rounded-md dark:text-white focus:border-blue-500 focus:ring-opacity-40 dark:focus:ring-opacity-40 focus:ring-blue-300 dark:focus:ring-blue-400 focus:ring dark:bg-gray-800 focus:outline-none">
        <i class="fa-solid fa-bars"></i>
    </button>
    <!-- Dropdown menu -->
    <div x-show="isOpen" 
        @click.away="isOpen = false"
        x-transition:enter="transition ease-out duration-100"
        x-transition:enter-start="opacity-0 scale-90"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-100"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-90"
        class="absolute right-0 z-20 w-48 py-2 mt-2 origin-top-right bg-white rounded-md shadow-xl dark:bg-gray-800"
    >
        <%= link_to (t'defaults.like'), likes_path, class: 'block px-4 py-3 text-sm text-gray-600 capitalize transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white' %>
        <%= link_to (t'defaults.user_index'), profile_path, class: 'block px-4 py-3 text-sm text-gray-600 capitalize transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white' %>
        <hr class="border-gray-200 dark:border-gray-700 ">
        <%= link_to (t'defaults.logout'), logout_path, method: :delete, class: 'block px-4 py-3 text-sm text-gray-600 capitalize transition-colors duration-300 transform dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 dark:hover:text-white' %>
    </div>
  </header>
</div>
